<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/course_cardbg"
    android:backgroundTint="@color/course_card_grey"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingHorizontal="16dp"
    android:layout_marginBottom="8dp"
    android:paddingVertical="16dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/courseTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:fontFamily="@font/manrope_bold"
            android:gravity="center_vertical"
            android:text="IAT 359"
            android:textColor="@color/dark_grey"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/courseNumCards"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:fontFamily="@font/manrope_medium"
            android:text="18 Cards (2 New)"
            android:textColor="@color/dark_grey" />

    </LinearLayout>

    <ToggleButton
        android:id="@+id/favouriteButton"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_margin="12dp"
        android:layout_weight="0"
        android:background="@drawable/favorite_button"
        android:textOff="@null"
        android:textOn="@null"
        android:textSize="0dp" />
</LinearLayout>