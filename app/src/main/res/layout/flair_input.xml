<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/FlairInput"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:backgroundTint="#00BCD4"
    android:backgroundTintMode="src_atop"
    android:foregroundTint="#00BCD4"
    android:foregroundTintMode="src_over"
    android:orientation="vertical">

    <TextView
        android:id="@+id/FlairTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:fontFamily="sans-serif-light"
        android:text="Flairs"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/FlairInputSubmit"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/FlairNameInput"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="5dp"
            android:layout_weight="1"
            android:background="@drawable/flair_bg"
            android:ems="10"
            android:fontFamily="@font/manrope_medium"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            android:padding="10dp"
            android:text="Name"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/FlairSubmit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:background="@drawable/edit_text_bg"
            android:backgroundTint="#D3D3D3"
            android:clickable="true"
            android:fontFamily="@font/manrope_medium"
            android:gravity="center"
            android:text="Submit"
            android:textColor="#455A64" />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/FlairList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="10dp" />
</LinearLayout>